<!DOCTYPE html>
<html>
@model IEnumerable<CarCompare.Models.CarDataDTO>
@model CarCompare.ViewModels.CarDataVM
@{
    ViewBag.Title = "Home Page";
    CarCompare.ViewModels.CarDataVM cdVM = ViewBag.CarData;
}

<head>
    <!--Link to stylesheet-->
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <style>
        .filterDrop {
            display: inline-block;
            cursor: pointer;
        }

        .bar1, .bar2, .bar3 {
            width: 35px;
            height: 5px;
            background-color: #333;
            margin: 6px 0;
            transition: 0.4s;
        }

        .change .bar1 {
            transform: translate(0, 11px) rotate(-45deg);
        }

        .change .bar2 {
            opacity: 0;
        }

        .change .bar3 {
            transform: translate(0, -11px) rotate(45deg);
        }
    </style>
</head>

<body>
    <div class="field filter">
        <div class="filterDrop" onclick="myFunction(this)">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
        </div>
    </div>

    <script>
        function myFunction(x) {
            x.classList.toggle("change");
    </script>

    <div class="field result">
        @{
                //Calles the partial view so index does not get cluttered
                @Html.Partial("Partials/_CarDataPV", cdVM)
        }
    </div>
</body>
</html>
