@*@model IEnumerable<CarCompare.Models.CarDataDTO>*@
@model CarCompare.ViewModels.CarDataVM
@{
    ViewBag.Title = "Home Page";
    CarCompare.ViewModels.CarDataVM cdVM = ViewBag.CarData;
}

<div class="headerField">

    <h1>HeaderField</h1>
    <p>Info how to use the website.</p>
</div>


<div class="filterField" style="">
    <div>
        <button class="filterButton"> Filtrera!</button>
        <h1>FilterField</h1>
        <p>The area where the user could filter as he/she wants.</p>
    </div>
</div>

<div class="resultField">
    <h1>ResultField</h1>
    <p>Here, we are getting the result from sorting the result.</p>    
    @{
        //Calles the partial view so index does not get cluttered
        @Html.Partial("Partials/_CarDataPV", cdVM)
    }

</div>

<style>
    .filterButton {
        padding: 0.25vw 2vw 0.25vw;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 2.5px;
        font-weight: 400;
        color: white;
        background-color: darkolivegreen;
        border-radius: 10vw;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease 0s;
        margin-left: 50vw;
        margin-top: 25vw;
        position: absolute;
    }

        .filterButton:hover {
            background-color: #23c483;
            box-shadow: 0px 0.12vw 0.5vw rgba(46, 229, 157, 0.4);
            color: green;
            transform: translateY(-7px);
        }

        .filterButton:active {
            transform: translateY(-1px);
        }


    .filterField {
        background-color: gray;
        width: 62.5vw;
        min-height: 30vw;
    }

    .resultField {
        background-color: silver;
        width: 62.5vw;
        min-height: 10vw;
    }


    .headerField {
        background-color: saddlebrown;
        width: 62.5vw;
        height: 10vw;
        margin-top: 4vw;
    }
</style>
